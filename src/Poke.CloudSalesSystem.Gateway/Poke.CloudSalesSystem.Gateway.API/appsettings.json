{
  "AllowedHosts": "*",
  "Serilog": {
    "Using": [ "Serilog.Sinks.Seq" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "Seq",
        "Args": {
          "serverUrl": "http://seq:5341"
        }
      }
    ]
  },
  "ServicesConfiguration": {
    "CustomerServiceBaseUrl": "http://localhost:7001",
    "AccountServiceBaseUrl": "http://localhost:7002",
    "LicenceServiceBaseUrl": "http://localhost:7003",
    "ProductServiceBaseUrl": "http://localhost:7004"
  }
}
